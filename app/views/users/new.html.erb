
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h1>Users</h1>
<%= form_for(@user) do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<%= f.label :email%><br>
<%= f.email_field :email%><br>
<%= f.label :phone %><br>
<%= f.phone_field :phone %><br>
<%= f.label :password%><br>
<%= f.password_field :password %><br>
<%= f.submit "Create my account", class: "btn btn-primary" %>
<% end %>
</div>
</div>
