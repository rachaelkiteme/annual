
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h1>Log in</h1>
<%= form_for(:session, url: login_path) do |f| %>
<%= f.label :email%><br>
<%= f.email_field :email, class: 'form_control',required: true %><br>
<%= f.label :password%><br>
<%= f.password_field :password, class: 'form_control', required: true  %><br>
<%= f.submit "Log in", class: "btn btn-primary" %>
<p>New user? <%=link_to 'sign up now!', new_user_path %> </p>
<% end %>
</div>
</div>
